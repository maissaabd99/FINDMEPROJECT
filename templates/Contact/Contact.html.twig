<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    function onselect(){
        $('#msg').bind('focus',  false);
    }
    var chatWindow = document.getElementById('loadmsg');
    console.log(chatWindow);

    window.onload=function(){
        var box = document.getElementById('loadmsg');
        box.scrollTop = box.scrollHeight;

    };

    function autoRefresh_div() {
        $("#anchor").load(document.URL +  ' #anchor',function () {
            var box = document.getElementById('loadmsg');
                box.scrollTop = box.scrollHeight;
        });
    }

    setInterval('autoRefresh_div()', 8000);

    function addMsg(event){
        event.preventDefault();
        const url = this.action;
        console.log(url);
        var texte= this.querySelector('.texte');
        console.log(texte);
        let data = new FormData(this);
        axios.post(url,data).then(function(response){
            console.log(response.data);
            $('<li class="sent"><h6 style="font-size: 10px">Vous</h6><p>' + response.data.message + '</p><br><span style="font-size: 10px;">'+response.data.date+'</span>\n' + '</li>').appendTo($('.messages ul'));
            $('.message-input input').val(null);
            // $("#loadmsg").animate({ scrollBottom: $(document).height() }, 1000);
            $('#anchor').load(document.URL +  ' #anchor',function () {
                var box = document.getElementById('loadmsg');
                box.scrollTop = box.scrollHeight;
            });

        }).catch(function(error){
            console.log(error)
        })
    }
    document.querySelectorAll('form.msgform').forEach(function (link) {
        link.addEventListener('submit',addMsg)
    })
</script>
