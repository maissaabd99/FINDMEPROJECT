        <div class="wrap">
            <form method="post" action="{{ path('newmsg') }}" id="form" name="form" class="msgform">
                <i class="far fa-comment-dots" style="font-size:25px"></i><input type="text" required autocomplete="off"  placeholder="Ecrire votre message..."  onclick="onselect()" name="msg" class="msg" id="msg"  style="margin-top: 60px;width: 500px;outline: none;user-focus-pointer: none;padding:15px;background-color: transparent;border:none;border-bottom: 1px solid #32465a">
            </form>
        </div>
    </div>
