            <ul id="anchor">
                {% for msg in messages|sort((a, b) => a.dateMess <=> b.dateMess) %}
{#                    <td>{{ dump(msg.dateMess,msg.message) }}</td>#}
                {%  if msg.utilisateur==null %}
                    <li class="replies">
                          <img src="{{ asset('assets/images/usericon.png') }}" alt="" style="margin-right: 0px"  />
                          <h6 style="font-size: 10px;margin-left: 510px">{{ msg.admin.nom }}</h6>
                          <p>{{ msg.message }}</p>&nbsp;
                        &nbsp;<span  title="{{ msg.dateMess|date('d/m/Y H:i') }}" style="font-size: 10px;float: right;margin-top: 13px;margin-right: 3px">&nbsp; {{ msg.dateMess|ago }}</span>
                     </li>
                {% else %}
                     <li class="sent">
                         <img src="{{ asset('assets/images/usericon.png') }}" alt="" />
                         <h6 style="font-size: 10px">Vous</h6>
                         <p>{{ msg.message }}</p>
                         <span style="font-size: 10px;top: -25px;margin-left:0px" title="{{ msg.dateMess|date('d/m/Y H:i') }}">{{ msg.dateMess|ago }}</span>
